{% extends 'base.html.twig' %}
{% block title %}KUROKO'S BASKET{% endblock %}


{% block body %}
    <!--  HEADER  -->
    <header>
        <div>LOGO</div>
        <h1>Nom du site</h1>
        <nav>
            <ul>
                <li><a href="#">L'UNIVERS</a></li>
                <li><a href="/episode">EPISODES</a></li>
                <li><a href="#">MANGAS</a></li>
                <li><a href="#">ACTUALITES</a></li>
            </ul>
        </nav>
    </header>

    <!--  CONTENTS  -->
    <div class="container">

        <!--  NEWS  -->
        <div class="content news">
            <div class="content__title">
                <img src="/dist/images/iconscan.png" alt="">
                Actualit√©s
            </div>
            <img src="/dist/images/Actu.jpg" alt="">

            <ul>
                {% for new in news|reverse|slice(0, 5)%}
                    <li><a href="#">{{ new.title }}</a></li>
                {% endfor %}
            </ul>

        </div>

        <!--  EPISODES  -->
        <div class="content episodes">
            <div class="content__title">
                <img src="/dist/images/iconscan.png" alt="">
                Derniers Episodes
                <a href="/episode"> Voir tout </a>
            </div>
            <h3>SAISON 1</h3>
            <div class="content__episodes">
                {% for episode in episodes|reverse|slice(0, 5)%}
                    <div class="content__episode">
                        <img src="/uploads/episodes/{{ episode.fileVideo }}" alt="">
                        <p>{{ episode.title }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>

        <!--  SCANS  -->
        <div class="content scans">
            <div class="content__title">
                <img src="/dist/images/iconscan.png" alt="">
                Derniers Scans
                <a href="#"> Voir tout </a>
            </div>
            <h3>VOLUME 2</h3>
            <div class="content__scans">
                {% for scan in scans|reverse|slice(0, 5)%}
                    <div class="content__episode">
                        <img src="/uploads/scans/{{ scan.fileScanName }}" alt="">
                        <p>{{ scan.title }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!--  FOOTER  -->
    <footer>
        FOOTER
    </footer>
{% endblock %}

{% block stylesheets %}
<style>
    header {
        background-image: url("/dist/images/HEADER.jpg");
    }
</style>
{% endblock %}

