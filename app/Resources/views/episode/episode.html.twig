{% extends 'base.html.twig' %}
{% block title %}KUROKO'S BASKET{% endblock %}


{% block body %}

    {% include 'header.html.twig' %}

    <!--  CONTENTS  -->

    <div class="container">
        <section>
            <div class="episodes entity-title">
                <h1>TOUS LES Ã‰PISODES</h1>
            </div>
            <div class="episodes-content">
                {% for item in menu %}
                    <div class="season-content">
                        <h3 class="season-title">
                            <a href="#">SAISON {{ item[0].season }}</a>
                        </h3>

                        {% for it in item %}
                                <div class="episode-content">
                                    <a href="/episode/{{ it.id }}">
                                        <img src="/uploads/episodes/{{ it.thumbnail }}" alt="" class="picture-episode-content">
                                    </a>
                                    <div class="title-episode-content">
                                        <div>
                                            <a href="/episode/{{ it.id }}">{{ it.title }}</a>
                                        </div>
                                    </div>
                                </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </section>
    </div>

    {% include 'footer.html.twig' %}

{% endblock %}

